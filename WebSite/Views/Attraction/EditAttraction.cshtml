@model ProjectHermes.Models.Admin.AttractionAdministration


@if (Model.Attraction.Attrationid != 0)
{
<h2>
    Edit Attraction
</h2>
}
else { 
<h2>
    Add Attraction
</h2>
}



@using (Html.BeginForm("EditAttraction", "Attraction", FormMethod.Post))
{


    {
        if (Model.Attraction.Attrationid != 0)
        {
            <input type="submit" value="Edit Attraction" class="btn btn-default" />
         @Html.ActionLink("Delete", "DeleteAttraction", "Admin", new { ID = Model.Attraction.Attrationid, @class = "btn btn-default" })

        }
        else
        {
            <input type="submit" value="Add Attraction" class="btn btn-default" />
        }
    }

        @Html.ActionLink("Cancel", "Index", "Admin", new { @class = "btn btn-default" })

    
    @Html.ValidationSummary("There has been an issue adding your attraction", new { @class = "alert alert-danger" });

    @Html.HiddenFor(x => x.Attraction.Attrationid);
    
    
  <div class="form-group">    
    @Html.LabelFor(x => x.Attraction.Name)
    @Html.TextBoxFor(x => x.Attraction.Name, new { @class = "form-control" })
 </div>
     <div class="form-group"> 
    @Html.LabelFor(x => x.Attraction.Description)
    @Html.TextAreaFor(x => x.Attraction.Description, new { @class = "form-control" })
</div>        
    <div class="form-group">
        @Html.LabelFor(x => x.SelectedPlace)
        @Html.DropDownListFor(x => x.SelectedPlace, Model.Places, "Select Place", new { @class = "form-control" })
    </div>
        

 
}